listen 80;

index index.html index.htm index.php;

location / {
    try_files $uri @apache;
}

location @apache {
    proxy_pass http://127.0.0.1:81;
    include /data/configs/nginx/nginx_proxy.public;
}

location ~ [^/]\.php(/|$) {
    proxy_pass http://127.0.0.1:81;
    include /data/configs/nginx/nginx_proxy.public;
}

include /data/configs/nginx/nginx_static.public;